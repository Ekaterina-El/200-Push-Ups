<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/purple_700"
    android:padding="10dp"
    >

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="32dp"
                android:layout_height="32dp">
                <TextView
                    android:id="@+id/numberDayOfWeek"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:gravity="center"
                    android:textColor="@color/light_gray"
                    android:fontFamily="@font/jura"
                    android:textSize="22sp" />

                <ImageView
                    android:id="@+id/train_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:visibility="gone"
                    android:src="@drawable/ic_muscular" />

            </RelativeLayout>


            <TextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="День"
                android:textColor="@color/light_gray"
                android:fontFamily="@font/jura"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/trainSet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="87 72 65 58 50"
                android:textColor="@color/light_gray"
                android:fontFamily="@font/jura"
                android:textSize="22sp" />
            <TextView
                android:id="@+id/timeBreak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/break_time"
                android:textColor="@color/light_gray"
                android:fontFamily="@font/jura"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/status_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow" />

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="@color/light_gray" />
        <TextView
            android:id="@+id/break_day"
            android:layout_width="wrap_content"
            android:paddingHorizontal="8dp"
            android:layout_centerInParent="true"
            android:background="@color/purple_700"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jura"
            android:gravity="center"
            android:text="@string/day_res"
            android:textColor="@color/light_gray"
            android:textSize="14sp" />

    </RelativeLayout>




</LinearLayout>